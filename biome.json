{
	"$schema": "https://biomejs.dev/schemas/1.9.0/schema.json",
	"formatter": {
		"enabled": true,
		"indentWidth": 2,
		"lineWidth": 100
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noVar": "error",
				"useConst": "error"
			}
		}
	},
	"files": {
		"ignore": ["node_modules", "dist", "build", "**/coverage", "**/.turbo", "**/.next", "**/out"]
	}
}
